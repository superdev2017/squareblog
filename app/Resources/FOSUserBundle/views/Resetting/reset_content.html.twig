{% trans_default_domain 'FOSUserBundle' %}
<div class="credentials" style="padding-bottom: 25px;">
    <h3 class="text-center uppercase"><strong>Reset Password</strong></h3>
    <div class="group">
        <div class="table-cell line"></div>
        <div class="table-cell text"><img src="{{ asset('images/misc/logo.png') }}" class="img-responsive" alt="{{ app_name }}" /></div>
        <div class="table-cell line"></div>
    </div>
    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
        <div class="form-group">
            <label for="subscription_id">{{ 'form.new_password'|trans }}:</label>
            {{ form_widget(form.plainPassword.first, { 'attr':
                {
                    'class': 'form-control required input',
                    'autocorrect': 'off',
                    'required': 'required'
                } }) }}
            <p class="help-block"><span class="field-validation-valid text-danger" data-valmsg-for="email" data-valmsg-replace="true"></span></p>
        </div>
        <div class="form-group">
            <label for="subscription_id">{{ 'form.new_password_confirmation'|trans }}:</label>
            {{ form_widget(form.plainPassword.second, { 'attr':
                {
                    'class': 'form-control required input',
                    'autocorrect': 'off',
                    'required': 'required'
                } }) }}
            <p class="help-block"><span class="field-validation-valid text-danger" data-valmsg-for="email" data-valmsg-replace="true"></span></p>
        </div>

        <button type="submit" class="btn btn-pw btn-block row-margin-top btn-success" style="width: auto; margin: 0 auto;">{{ 'resetting.reset.submit'|trans }}</button>
    {{ form_end(form) }}
</div>
